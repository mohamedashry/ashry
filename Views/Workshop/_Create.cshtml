@model NeuhausWorkshop.Business.Entities.POCO.WorkshopVm
@using NeuhausWorkshop.Business.Entities.Enums
@{
    var model = Newtonsoft.Json.JsonConvert.SerializeObject(Model);
}
<div id="creatWorkshop" class="modal fade customModal" role="dialog">
    <form id="CreateWorkshopForm">
        <div class="modal-dialog ">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@SharedHtmlLocalizer["CreateWorkshop"]</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-custom">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class='col-sm-12'>
                                <div class="form-group">
                                    <label asp-for="Date" class="control-label"></label> <strong class="text-danger">*</strong>
                                    <div class='input-group date' id='datetimepicker1'>
                                        <input asp-for="Date" class="form-control" id="Date" />
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar"></span>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>

                            </div>
                            <div class='col-sm-12'>
                                <div class="form-group">
                                    <label asp-for="TimeFrom" class="control-label"></label> <strong class="text-danger">*</strong>
                                    <div class='input-group date timepicker' id='datetimepicker2'>
                                        <input asp-for="TimeFrom" class="form-control" id="TimeFrom" />
                                        <span class="input-group-addon">
                                            <span class="fa fa-clock-o"></span>
                                        </span>
                                    </div>
                                    <span asp-validation-for="TimeFrom" class="text-danger" style="display: block;"></span>
                                    <span id="NotValidStartTime" class="text-danger" style="display: block;" hidden>@SharedHtmlLocalizer["NotValidStartTime"]</span>
                                    <span id="TimeExceeds" class="text-danger" style="display: block;" hidden>@SharedHtmlLocalizer["TimeExceeds"]</span>
                                </div>

                            </div>
                            <div class='col-sm-12'>
                                <div class="form-group">
                                    <label asp-for="TimeTo" class="control-label"></label>
                                    <div class='input-group date timepicker' id='datetimepicker3'>
                                        <input asp-for="TimeTo" class="form-control" id="TimeTo" readonly />
                                        <span class="input-group-addon">
                                            <span class="fa fa-clock-o"></span>
                                        </span>
                                    </div>
                                    <span asp-validation-for="TimeTo" class="text-danger"></span>
                                </div>

                            </div>
                            <div class='col-sm-12'>
                                <div class="form-group">
                                    <label asp-for="SlotCount" class="control-label"></label> <strong class="text-danger">*</strong>

                                    <input asp-for="SlotCount" class="form-control" id="Slots"/>

                                </div>
                                <span asp-validation-for="SlotCount" class="text-danger"></span>
                            </div>
                            <div class='col-sm-12'>
                                <div class="form-group">

                                    <label asp-for="Languages" class="control-label"></label> <strong class="text-danger">*</strong>
                                    <div>
                                        @foreach (var item in Model.Languages)
                                        {
                                            <div class="checkbox checkbox-danger checkbox-inline">
                                                <input type="checkbox" name="Language" id="@item.Id" value="@item.Id">
                                                <label for="radio3">
                                                    @item.Name
                                                </label>
                                            </div>
                                        }
                                    </div>
                                    <span id="Required" class="text-danger" hidden>@SharedHtmlLocalizer["Metadata_FieldNotEmpty"]</span>
                                   

                                    @*<label asp-for="Language" class="control-label"></label>
                                        <select asp-for="Language" asp-items="Html.GetEnumSelectList<Language>()" class="form-control" multiple>
                                            <option value="">-- Not specified --</option>
                                        </select>*@
                                    @*<select class="js-example-data-array form-control" id="Languages"></select>*@

                                    @*<label asp-for="Language" class="control-label"></label> <strong class="text-danger">*</strong>
                                        <div>
                                            <div class="radio radio-custom radio-inline">
                                                <input type="radio" name="Language" id="radio3" value="2">
                                                <label for="radio3">
                                                    Dutch
                                                </label>
                                            </div>
                                            <div class="radio radio-danger radio-inline">
                                                <input type="radio" name="Language" id="radio4" value="1" checked="">
                                                <label for="radio4">
                                                    French
                                                </label>
                                            </div>
                                        </div>
                                        <span asp-validation-for="Language" class="text-danger"></span>*@
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer align-center">
                    <button type="submit" class="btn btn_custom btn_popup" id="SaveWorkshopBtn">@SharedHtmlLocalizer["BtnSave"]</button>
                    <button type="button" class="btn btn_custom" data-dismiss="modal">@SharedHtmlLocalizer["Cancel"]</button>
                </div>
            </div>

        </div>
    </form>
</div>
@section Scripts {
   
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
        var Model = '@Html.Raw(model)';
</script>